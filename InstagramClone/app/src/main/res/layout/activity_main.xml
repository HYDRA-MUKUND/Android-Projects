<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayoutforauth"
        android:layout_width="354dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.356"
        app:tabIndicatorColor="#BE000000"
        app:tabTextColor="#F21E1616">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/authphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHONE" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/authemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMAIL" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerforauth"
        android:layout_width="385dp"
        android:layout_height="349dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.793">

    </androidx.viewpager.widget.ViewPager>

    <ImageView
        android:id="@+id/profilelogo"
        android:layout_width="129dp"
        android:layout_height="147dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/tablayoutforauth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/useri" />

    <TextView
        android:id="@+id/newuseasdjksdr"
        android:layout_width="165dp"
        android:layout_height="30dp"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/actor"
        android:gravity="center"
        android:paddingRight="5dp"
        android:text="Already have an account?"
        android:textColor="#C9453D3D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.381"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937" />

    <TextView
        android:id="@+id/alredayhavelogin"
        android:layout_width="224dp"
        android:layout_height="30dp"
        android:layout_marginEnd="11dp"
        android:fontFamily="@font/actor"
        android:gravity="center"
        android:paddingLeft="157dp"
        android:text="Log In."
        android:textColor="#0E63B8"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937" />
</androidx.constraintlayout.widget.ConstraintLayout>